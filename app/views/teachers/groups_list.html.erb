<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-7">



      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Mugallymyň Toparlaryny Berkit</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
            <a class="close-link">
              <i class="fa fa-times"></i>
            </a>
          </div>
        </div>





        <div class="ibox-content">
          <h3>
            Mugallymyň Toparlary
          </h3>
          <br>

          <% @teacher = Teacher.find_by_id(params[:id]) %>
          <br>

          <div><label class="col-sm-4 control-label">Ady we Familiýasy</label>
            <div class="col-sm-8"><%= @teacher.teacherFName+" "+@teacher.teacherLName %></div>
          </div>

          <%#= form_tag teachers_path(:id => params[:id]), :method => 'post'  do %>
          <%= form_for(@teacher, :method => 'get') do |f| %>

              <br><br><br>
              <div><label class="col-sm-4 control-label">Topary</label>
                <div class="col-sm-8">
                  <%= f.collection_select(:group_id, @groups, :id, :groupTitle, {name: "group_lists[]", id: "group_ids", :selected => @id_array}, {class: "chosen-select", style: "width:350px", tabindex: "4", multiple: "true"}) %>
                </div>
              </div>

              <br><br><br><br>
              <div class="actions">
                <%= f.submit "Kabul Et", :class => "btn btn-success" %>
              </div>
          <% end %>

          <br>

        </div>

      </div>
    </div>
  </div>
</div>