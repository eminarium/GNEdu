<h1>Girizilen Arasynaglaryň Sanawy</h1>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Arasynag".html_safe, new_midterm_path, :class => "btn btn-primary"  %>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Excel Import".html_safe, submit_midterms_path, :class => "btn btn-primary"  %>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Arasynaglaryň Sanawy</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>Şertnama №</th>
                <th>Diňleýji</th>
                <th>Topary</th>
                <th>Arasynag Belgisi</th>
                <th>Bahasy</th>
                <th>Rugsatlymy</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </thead>
              <tbody>


              <% @midterms.each do |midterm| %>
                  <tr>
                    <td>
                      <% if (midterm) %>
                        <% if (midterm && midterm.contract.seasonContractNo) %>
                            <%= link_to (midterm.contract.seasonContractNo > 99) ? midterm.contract.seasonContractNo.to_s : ((midterm.contract.seasonContractNo > 9) ? "0"+midterm.contract.seasonContractNo.to_s : "00"+midterm.contract.seasonContractNo.to_s), midterm.contract %>
                        <% end %>
                      <% end %>
                    </td>
                    <td><%= link_to midterm.contract.student.first_and_last_name, midterm.contract.student %></td>
                    <td><%= link_to midterm.contract.group.groupTitle, midterm.contract.group %></td>
                    <td><%= midterm.midtermOrderNo %></td>
                    <td><%= midterm.midtermPoints %></td>

                    <td>
                      <% if (midterm.isReleasedFrom) %>
                          <i class="fa fa-check" style="color: lawngreen"></i>
                      <% else %>
                          <i class="fa fa-times" style="color: red"></i>
                      <% end %>
                    </td>

                    <td><%= midterm.midtermNotes %></td>
                    <td><div style="float: right">
                      <%= link_to "Giňişleýin", midterm, :class => "btn btn-success" %>
                      <%= link_to "Üýtget", edit_midterm_path(midterm), :class => "btn btn-warning" %>
                      <% link_to "Boz", midterm, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
                    </div></td>
                  </tr>
              <% end %>
              </tbody>

              <tfoot>
              <tr>
                <th>Şertnama №</th>
                <th>Diňleýji</th>
                <th>Topary</th>
                <th>Arasynag Belgisi</th>
                <th>Bahasy</th>
                <th>Rugsatlymy</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </tfoot>

            </table>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>