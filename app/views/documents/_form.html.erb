<%= form_for(@document) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> ýalňyş sebäpli maglumatlar kabul edilmedi...</h2>

      <ul>
      <% @document.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div><label class="col-sm-4 control-label">Dinleyji :</label>
      <div class="col-sm-8"><%= Student.find_by_id(params[:student_id]).first_and_last_name %></div>
    </div>

    <br><br><br>

    <div><label class="col-sm-4 control-label">Resminamasy </label>
      <div class="col-sm-8"><%= f.file_field :doc_url, :class => "form-control"  %></div>
    </div>

    <br><br><br>

    <div><label class="col-sm-4 control-label">Bellikler</label>
      <div class="col-sm-8"><%= f.text_area :notes, :type => "text", :class => "form-control"  %></div>
    </div>

    <%= f.text_field :student_id, :value => params[:student_id], :hidden => 'hidden'  %> <!-- To be able to get student id in create action -->

    <br><br><br>

    <div class="actions">
    <%= f.submit "Kabul Et", :class => "btn btn-success" %>
  </div>
<% end %>


