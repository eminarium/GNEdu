<h1>Girizilen Final Synaglarynyň Sanawy</h1>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Final Synagy".html_safe, new_final_path, :class => "btn btn-primary"  %>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Excel Import".html_safe, submit_finals_path, :class => "btn btn-primary"  %>


<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Final Synaglarynyň Sanawy</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>Şertnama №</th>
                <th>Diňleýji</th>
                <th>Topary</th>
                <th>Bahasy</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </thead>
              <tbody>


              <% @finals.each do |final| %>
                  <tr>
                    <td>
                      <% if final.contract.seasonContractNo %>
                          <%= link_to (final.contract.seasonContractNo > 99) ? final.contract.seasonContractNo.to_s : ((final.contract.seasonContractNo > 9) ? "0"+final.contract.seasonContractNo.to_s : "00"+final.contract.seasonContractNo.to_s), final.contract %>
                      <% end %>
                    </td>
                    <td><%= link_to final.contract.student.first_and_last_name, final.contract.student %></td>
                    <td><%= link_to final.contract.group.groupTitle, final.contract.group %></td>
                    <td><%= final.finalPoints %></td>

                    <td><%= final.finalNotes %></td>
                    <td><div style="float: right">
                      <%= link_to "Giňişleýin", final, :class => "btn btn-success" %>
                      <%= link_to "Üýtget", edit_final_path(final), :class => "btn btn-warning" %>
                      <% link_to "Boz", final, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
                    </div></td>
                  </tr>
              <% end %>
              </tbody>

              <tfoot>
              <tr>
                <th>Şertnama №</th>
                <th>Diňleýji</th>
                <th>Topary</th>
                <th>Bahasy</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </tfoot>

            </table>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>