<h1>Tapgyrlaryň Sanawy</h1>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Tapgyr".html_safe, new_season_path, :class => "btn btn-primary"  %>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Tapgyrlaryň Sanawy</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="table-responsive">


            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>T/B</th>
                <th>Atlandyrylyşy</th>
                <th>Başlanýan Senesi</th>
                <th>Tamamlanýan Senesi</th>
                <th>Gaýtarma Soňky Senesi</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </thead>

              <tbody>
              <% @seasons.each do |season| %>
                  <tr>
                    <td><%= link_to season.seasonNo, season %></td>
                    <td><%= link_to season.seasonTitle, season %></td>
                    <td><%= season.seasonFromDate.strftime("%d-%m-%Y") %></td>
                    <td><%= season.seasonToDate.strftime("%d-%m-%Y") %></td>
                    <td><%= season.return_deadline.strftime("%d-%m-%Y") %></td>
                    <td><%= season.notes %></td>
                    <td><div style="float: right">
                      <% if (check_restrictions(controller_name, 'show')) %>
                          <%= link_to "Giňişleýin", season, :class => "btn btn-success" %>
                      <% end %>
                      <% if (check_restrictions(controller_name, 'edit')) %>
                          <%= link_to "Üýtget", edit_season_path(season), :class => "btn btn-warning" %>
                      <% end %>
                      <% if (check_restrictions(controller_name, 'destroy')) %>
                          <% link_to "Boz", season, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
                      <% end %>

                    </div></td>
                  </tr>
              <% end %>
              </tbody>

              <tfoot>
              <tr>
                <th>T/B</th>
                <th>Atlandyrylyşy</th>
                <th>Başlanýan Senesi</th>
                <th>Tamamlanýan Senesi</th>
                <th>Gaýtarma Soňky Senesi</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </tfoot>

            </table>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>