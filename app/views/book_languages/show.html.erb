          <br><br><br>

          <div><label class="col-sm-4 control-label">Diliň Gysgaça Ady</label>
            <div class="col-sm-8"><i><%= @book_language.bookLanguageShortName %></i></div>
          </div>

          <br><br><br>

          <div><label class="col-sm-4 control-label">Bellikler</label>
            <div class="col-sm-8"><i><%= @book_language.notes %></i></div>
          </div>

          <br><br><br>

          <%= link_to 'Üýtget', edit_book_language_path(@book_language), :class => "btn btn-warning" %> &nbsp;
          <%= link_to 'Yza', book_languages_path, :class => "btn btn-outline btn-success" %>

        </div>

      </div>
    </div>
  </div>
</div>