<h1>Ulanyjylaryň Sanawy</h1>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Ulanyjy".html_safe, new_user_path, :class => "btn btn-primary"  %>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Ulanyjylaryň Sanawy</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="tabs-container">
            <ul class="nav nav-tabs">
              <li class="active">
                <a data-toggle="tab" href="#tab-active-users"> Aktiw Ulanyjylar</a>
              </li>
              <li class="">
                <a data-toggle="tab" href="#tab-inactive-users"> Blokirlenen Ulanyjylar </a>
              </li>
            </ul>

           <div class="tab-content">

             <div id="tab-active-users" class="tab-pane active">

               <div class="panel-body">

          <div class="table-responsive">


            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>Ulanyjy Ady</th>
                <th>Ady</th>
                <th>Familiýasy</th>
                <th>Role</th>
                <th>Blokirlenen ?</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </thead>

              <tbody>
              <% @unblocked_users.each do |unblocked_user| %>
                  <tr>
                    <td><%= link_to unblocked_user.userLogin, unblocked_user %></td>
                    <td><%= link_to unblocked_user.userFName, unblocked_user %></td>
                    <td><%= link_to unblocked_user.userLName, unblocked_user %></td>
                    <td><%= link_to unblocked_user.role.name, unblocked_user.role %></td>
                    <td>
                      <% if (unblocked_user.isBlocked) %>
                          <i class="fa fa-check" style="color: lawngreen"></i>
                      <% else %>
                          <i class="fa fa-times" style="color: red"></i>
                      <% end %>
                    </td>
                    <td><%= unblocked_user.notes %></td>
                    <td><div style="float: right">
                      <% if (check_restrictions(controller_name, 'show')) %>
                          <%= link_to "Giňişleýin", unblocked_user, :class => "btn btn-success" %>
                      <% end %>
                      <% if (check_restrictions(controller_name, 'edit')) %>
                        <%= link_to "Üýtget", edit_user_path(unblocked_user), :class => "btn btn-warning" %>
                      <% end %>
                      <% if (check_restrictions(controller_name, 'destroy')) %>
                        <%= link_to "Boz", unblocked_user, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
                      <% end %>
                    </div></td>
                  </tr>
              <% end %>
              </tbody>

              <tfoot>
              <tr>
                <th>Ulanyjy Ady</th>
                <th>Ady</th>
                <th>Familiýasy</th>
                <th>Role</th>
                <th>Blokirlenen ?</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </tfoot>

            </table>

          </div>


        </div>
            </div>



             <div id="tab-inactive-users" class="tab-pane">

               <div class="panel-body">

                 <div class="table-responsive">


                   <table class="table table-striped table-bordered table-hover dataTables-example">
                     <thead>
                     <tr>
                       <th>Ulanyjy Ady</th>
                       <th>Ady</th>
                       <th>Familiýasy</th>
                       <th>Role</th>
                       <th>Blokirlenen ?</th>
                       <th>Bellikler</th>
                       <th>Amallar</th>
                     </tr>
                     </thead>

                     <tbody>
                     <% @blocked_users.each do |blocked_user| %>
                         <tr>
                           <td><%= link_to blocked_user.userLogin, blocked_user %></td>
                           <td><%= link_to blocked_user.userFName, blocked_user %></td>
                           <td><%= link_to blocked_user.userLName, blocked_user %></td>
                           <td><%= link_to blocked_user.role.name, blocked_user.role %></td>
                           <td>
                             <% if (blocked_user.isBlocked) %>
                                 <i class="fa fa-check" style="color: lawngreen"></i>
                             <% else %>
                                 <i class="fa fa-times" style="color: red"></i>
                             <% end %>
                           </td>
                           <td><%= blocked_user.notes %></td>
                           <td><div style="float: right">
                             <% if (check_restrictions(controller_name, 'show')) %>
                                 <%= link_to "Giňişleýin", blocked_user, :class => "btn btn-success" %>
                             <% end %>
                             <% if (check_restrictions(controller_name, 'edit')) %>
                                 <%= link_to "Üýtget", edit_user_path(blocked_user), :class => "btn btn-warning" %>
                             <% end %>
                             <% if (check_restrictions(controller_name, 'destroy')) %>
                                 <%= link_to "Boz", blocked_user, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
                             <% end %>
                           </div></td>
                         </tr>
                     <% end %>
                     </tbody>

                     <tfoot>
                     <tr>
                       <th>Ulanyjy Ady</th>
                       <th>Ady</th>
                       <th>Familiýasy</th>
                       <th>Role</th>
                       <th>Blokirlenen ?</th>
                       <th>Bellikler</th>
                       <th>Amallar</th>
                     </tr>
                     </tfoot>

                   </table>

                 </div>


               </div>
             </div>



           </div>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>