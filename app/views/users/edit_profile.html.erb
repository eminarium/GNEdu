<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-6">



      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Ulanyjy Maglumatlarymy Üýtget</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>


        <div class="ibox-content">
          <h3>
            Ulanyjy Maglumatlarym
          </h3>
          <br>

          <%= form_for(@user, :url => :update_profile) do |f| %>
              <% if @user.errors.any? %>
                  <div id="error_explanation">
                    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                    <ul>
                      <% @user.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
              <% end %>

              <div><label class="col-sm-4 control-label">Suraty </label>
                <div class="col-sm-8"><%= f.file_field :avatar_url, :class => "form-control"  %></div>
              </div>

              <br><br><br>

              <div><label class="col-sm-4 control-label">Ady</label>
                <div class="col-sm-8"><%= f.text_field :userFName, :type => "text", :class => "form-control", :disabled => true %></div>
              </div>

              <br><br><br>

              <div><label class="col-sm-4 control-label">Familiýasy</label>
                <div class="col-sm-8"><%= f.text_field :userLName, :type => "text", :class => "form-control", :disabled => true  %></div>
              </div>

              <br><br><br>


              <div><label class="col-sm-4 control-label">Ulanyjy Ady</label>
                <div class="col-sm-8"><%= f.text_field :userLogin, :type => "text", :class => "form-control", :disabled => true  %></div>
              </div>

              <br><br><br>

              <div><label class="col-sm-4 control-label">Gizlin Sözi</label>
                <div class="col-sm-8"><%= f.password_field :password, :type => "password", :class => "form-control"  %></div>
              </div>

              <br><br><br>

              <div><label class="col-sm-4 control-label">Gizlin Sözi Gaýtadan</label>
                <div class="col-sm-8"><%= f.password_field :password_confirmation, :type => "password", :class => "form-control"  %></div>
              </div>

              <br><br><br>

              <div class="actions">
                <%= f.submit "Kabul Et", :class => "btn btn-success" %>
              </div>

          <% end %>

        </div>

      </div>
    </div>
  </div>
</div>