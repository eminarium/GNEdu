<h1>Awtorlaryň Sanawy</h1>
<% if (check_restrictions(controller_name, 'new')) %>
    <%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Awtor".html_safe, new_author_path, :class => "btn btn-primary"  %>
<% end %>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Awtorlaryň Sanawy</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>Ady</th>
                <th>Familiýasy</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </thead>

              <tbody>
              <% @authors.each do |author| %>
                  <tr>
                    <td><%= link_to author.authorFName, author %></td>
                    <td><%= link_to author.authorLName, author %></td>
                    <td><%= author.notes %></td>
                    <td><div style="float: right">
                      <%= link_to "Giňişleýin", author, :class => "btn btn-success" %>

                      <% if (check_restrictions(controller_name, 'edit')) %>
                          <%= link_to "Üýtget", edit_author_path(author), :class => "btn btn-warning" %>
                      <% end %>

                      <% if (check_restrictions(controller_name, 'destroy')) %>
                          <%= link_to "Boz", author, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
                      <% end %>

                    </div></td>
                  </tr>
              <% end %>
              </tbody>

              <tfoot>
              <tr>
                <th>Ady</th>
                <th>Familiýasy</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </tfoot>

            </table>

          </div>

        </div>
      </div>
    </div>

  </div>
</div>