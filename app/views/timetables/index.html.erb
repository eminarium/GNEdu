<h1>Hepdelik Ders Meýilnamasy</h1>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Topar Dersi".html_safe, new_timetable_path, :class => "btn btn-primary"  %>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Toparlaryň Ders Meýilnamasy</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover dataTables-example">
  <thead>
    <tr>
      <th>Topar</th>
      <th>Synpy</th>
      <th>Hepdäniň Güni</th>
      <th>Bellikler</th>
      <th>Amallar</th>
    </tr>
  </thead>

  <tbody>
    <% @timetables.each do |timetable| %>
      <tr class="gradeA">
        <td>
          <% if timetable.group %>
            <%= link_to timetable.group.groupTitle, timetable.group %>
          <% end %>
        </td>
        <td><% if timetable.room %> <%= link_to timetable.room.roomFullTitle, timetable.room %> <% end %></td>
        <td><%= timetable.weekday %></td>
        <td><%= timetable.notes %></td>

        <td><div style="float: right">
          <%= link_to "Giňişleýin", timetable, :class => "btn btn-success" %>
          <%= link_to "Üýtget", edit_timetable_path(timetable), :class => "btn btn-warning" %>
          <%= link_to "Boz", timetable, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
        </div></td>

      </tr>
    <% end %>
  </tbody>
  <tfoot>
  <tr>
    <th>Topar</th>
    <th>Synpy</th>
    <th>Hepdäniň Güni</th>
    <th>Bellikler</th>
    <th>Amallar</th>
  </tr>
  </tfoot>
</table>
</div>
<br>

        </div>
      </div>
    </div>
  </div>
</div>

