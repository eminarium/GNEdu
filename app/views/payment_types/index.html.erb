<h1>Töleg Görnüşleriniň Sanawy</h1>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Töleg Görnüşi".html_safe, new_payment_type_path, :class => "btn btn-primary"  %>
<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Töleg Görnüşleriniň Sanawy</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="table-responsive">


            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>Töleg Görnüşi</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </thead>

              <tbody>
              <% @payment_types.each do |payment_type| %>
                  <tr>
                    <td><%= link_to payment_type.paymentTypeName, payment_type %></td>
                    <td><%= payment_type.notes %></td>
                    <td>
                      <div style="float: right">
                        <%= link_to "Giňişleýin", payment_type, :class => "btn btn-success" %>
                        <%= link_to "Üýtget", edit_payment_type_path(payment_type), :class => "btn btn-warning" %>
                        <% link_to "Boz", payment_type, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
                      </div>
                    </td>
                  </tr>
              <% end %>
              </tbody>

              <tfoot>
              <tr>
                <th>Töleg Görnüşi</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </tfoot>

            </table>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>