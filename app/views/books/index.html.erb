<h1>Kitaplaryň Sanawy</h1>
<% if (check_restrictions(controller_name, 'new')) %>
    <%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Kitap".html_safe, new_book_path, :class => "btn btn-primary"  %>
<% end %>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Kitaplaryň Sanawy</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>Suraty</th>
                <th>Ady</th>
                <th>Dili</th>
                <th>Awtorlary</th>
                <th>Mukdary</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </thead>

              <tbody>
              <% @books.each do |book| %>
                  <tr>
                    <td><%= book.imageUrl %></td>
                    <td><%= link_to book.bookName, book %></td>
                    <td><%= book.book_language.bookLanguageFullName %></td>
                    <td>
                      <% @authors = Author.where(:id => AuthorsBook.where(:book_id => book.id).select(:author_id) ) %>
                      <% if (@authors.count>0)%>
                          <% @authors.each do |au| %>
                              <%= link_to (au.authorFName.first(1)+". "+au.authorLName+" / "), au %>
                          <% end %>
                      <% else %>
                          Näbelli
                      <% end %>
                    </td>
                    <td><%= book.totalQuantity %></td>
                    <td><%= book.notes %></td>
                    <td><div style="float: right">
                      <%= link_to "Giňişleýin", book, :class => "btn btn-success" %>

                      <% if (check_restrictions(controller_name, 'edit')) %>
                        <%= link_to "Üýtget", edit_book_path(book), :class => "btn btn-warning" %>
                      <% end %>

                      <% if (check_restrictions(controller_name, 'delete')) %>
                          <%= link_to "Boz", book, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
                      <% end %>

                    </div></td>
                  </tr>
              <% end %>
              </tbody>

              <tfoot>
              <tr>
                <th>Suraty</th>
                <th>Ady</th>
                <th>Dili</th>
                <th>Awtorlary</th>
                <th>Mukdary</th>
                <th>Bellikler</th>
                <th>Amallar</th>
              </tr>
              </tfoot>

            </table>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>