<h1>Giriş Synaglaryň Sanawy</h1>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Synag".html_safe, new_exam_path, :class => "btn btn-primary"  %>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Synaglaryň Sanawy</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover dataTables-example">
  <thead>
  <tr>
    <th>Suraty</th>
    <th>Familiýasy</th>
    <th>Ady</th>
    <th>Atasynyň Ady</th>
    <th>Dersi</th>
    <th>Senesi</th>
    <th>Bahasy</th>
    <th>Netijesi</th>
    <th>Doc Serial</th>
    <th>Doc No</th>
    <th>Bellikler</th>
    <th>Amallar</th>
  </tr>
  </thead>

  <tbody>
  <% @exams.each do |exam| %>
      <tr class="gradeA">
        <td>
          <% if !exam.persona_url.blank? %>
              <%= image_tag "/uploads/examinees/"+exam.persona_url, width: 100 %>
          <% else %>
              <%= image_tag "/uploads/examinees/no_photo_6.png", width: 100 %>
          <% end %>
        </td>
        <td><%= exam.lName%></td>
        <td><%= exam.fName%></td>
        <td><%= exam.patronymic%></td>
        <td>
          <% if  exam.subject %>
            <%= exam.subject.subjectFullName %>
          <% end %>
        </td>
        <td><%= exam.examDate.strftime("%d.%m.%y / %H:%M ") %></td>
        <td>
          <% if  exam.examResult %>
              <%= exam.examResult %>
          <% end %>
        </td>
        <td>
          <% if (exam.subject && exam.examResult)  %>
              <% if (exam.examResult < exam.subject.minPassingPoints) %>
                  <i class="fa fa-times" style="color: red"></i>
              <% else %>
                  <i class="fa fa-check" style="color: lawngreen"></i>
              <% end %>
          <% end %>
        </td>
        <td><%= exam.doc_serial %></td>
        <td><%= exam.doc_no %></td>
        <td><%= exam.notes %></td>

        <td><div style="float: right">
          <%= link_to "Giňişleýin", exam, :class => "btn btn-success" %>
          <%= link_to "Üýtget", edit_exam_path(exam), :class => "btn btn-warning" %>
          <% link_to "Boz", exam, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
        </div></td>

      </tr>
  <% end %>
  </tbody>
  <tfoot>
  <tr>
    <th>Suraty</th>
    <th>Familiýasy</th>
    <th>Ady</th>
    <th>Atasynyň Ady</th>
    <th>Dersi</th>
    <th>Senesi</th>
    <th>Bahasy</th>
    <th>Netijesi</th>
    <th>Doc Serial</th>
    <th>Doc No</th>
    <th>Bellikler</th>
    <th>Amallar</th>
  </tr>
  </tfoot>

</table>
</div>



</div>
</div>
</div>
</div>
</div>


<br>

