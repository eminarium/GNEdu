<h1>KITAP BÄSLEŞIGI BARADA MAGLUMAT</h1>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>UMUMY MAGLUMAT</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>Topary</th>
                <th>Mugallymy</th>
                <th>Hasaba Alnan Diňleýji Sany</th>
                <th>TKM</th>
                <th>RUS</th>
                <th>ENG</th>
              </tr>
              </thead>

              <tbody>
              <% Group.where(:season_id => @book_contest.season.id, :isClosed => "FALSE").each do |grp| %>
                  <tr>
                    <td><%= grp.groupTitle %></td>
                    <td><%= grp.teacher.full_name %></td>
                    <td><%= (@total =Contract.where(:group_id => grp.id, :id => @contest_registered_contracts)).count %></td>
                    <td><%= @total.where(:group_id => grp.id, :id => @tkm_contest_registered_contracts).count %></td>
                    <td><%= @total.where(:group_id => grp.id, :id => @rus_contest_registered_contracts).count %></td>
                    <td><%= @total.where(:group_id => grp.id, :id => @eng_contest_registered_contracts).count %></td>
                  </tr>
              <% end %>
              </tbody>

              <tfoot>
              <tr>
                <th>Topary</th>
                <th>Mugallymy</th>
                <th>Hasaba Alnan Diňleýji Sany</th>
                <th>TKM</th>
                <th>RUS</th>
                <th>ENG</th>
              </tr>
              </tfoot>

            </table>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>