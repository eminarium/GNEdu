<h1>Kitap Ýaryşlarynyň Sanawy</h1>

<%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Kitap Ýaryşy".html_safe, new_book_contest_path, :class => "btn btn-primary"  %>

<br><br><br>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Ady</th>
    <th>Tapgyry</th>
    <th>Bellikler</th>
    <th colspan="3"></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @book_contests.each do |book_contest| %>
      <tr>
        <td><%= link_to book_contest.bookContestName, book_contest %></td>
        <td><%= link_to book_contest.season.seasonNo.to_s+'T', book_contest.season %></td>
        <td><%= book_contest.notes %></td>
        <td><div style="float: right">
          <%= link_to "Giňişleýin", book_contest, :class => "btn btn-success" %>
          <%= link_to "Üýtget", edit_book_contest_path(book_contest), :class => "btn btn-warning" %>
          <% link_to "Boz", book_contest, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
        </div></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
