<h1>KITAP BÄSLEŞIGI GATNAŞYJYLAR</h1>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>UMUMY MAGLUMAT</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="table-responsive">

            <table class="table table-striped table-bordered table-hover dataTables-example">
              <thead>
              <tr>
                <th>Suraty</th>
                <th>Student ID</th>
                <th>Contract ID</th>
                <th>Diňleýji</th>
                <th>Mugallymy</th>
                <th>Topary</th>
                <th>Wagty</th>
                <th>Kitaby</th>
                <th>Mobile</th>
                <th>SMS</th>
              </tr>
              </thead>

              <tbody>
              <% @contest_registered_contracts.each do |participant| %>
                  <tr>
                    <td>
                      <% if !participant.contract.student.imageUrl.blank? %>
                          <%= image_tag "/uploads/images/"+participant.contract.student.imageUrl, width: 200 %>
                      <% else %>
                          <%= image_tag "/uploads/images/no_photo_6.png", width: 200 %>
                      <% end %>
                    </td>
                    <td style="vertical-align: middle"><%= participant.contract.student.id %></td>
                    <td style="vertical-align: middle"><%= participant.contract.id %></td>
                    <td style="vertical-align: middle"><%= participant.contract.student.first_and_last_name %></td>
                    <td style="vertical-align: middle"><%= participant.contract.group.teacher.full_name %></td>
                    <td style="vertical-align: middle"><%= participant.contract.group.groupTitle %></td>
                    <td style="vertical-align: middle"><%= participant.contract.group.lesson_time.lessonTimeTitle %></td>
                    <td style="vertical-align: middle"><%= participant.book_language.bookLanguageShortName %></td>
                    <td style="vertical-align: middle"><%= participant.contract.student.mobilePhone %></td>
                    <td style="vertical-align: middle"><%= participant.contract.student.smsMobilePhone %></td>
                  </tr>
              <% end %>
              </tbody>

              <tfoot>
              <tr>
                <th>Suraty</th>
                <th>Student ID</th>
                <th>Contract ID</th>
                <th>Diňleýji</th>
                <th>Mugallymy</th>
                <th>Topary</th>
                <th>Wagty</th>
                <th>Kitaby</th>
                <th>Mobile</th>
                <th>SMS</th>
              </tr>
              </tfoot>

            </table>

          </div>

        </div>
      </div>
    </div>
  </div>
</div>