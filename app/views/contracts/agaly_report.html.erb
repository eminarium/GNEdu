<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Agaly Mugallym Hasabat</h5>
          <div class="ibox-tools">
            <a class="collapse-link">
              <i class="fa fa-chevron-up"></i>
            </a>
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-wrench"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="#">Config option 1</a>
              </li>
              <li><a href="#">Config option 2</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="ibox-content">

          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example" >
              <thead>
              <tr>
                <th>Şertnama ID</th>
                <th>Okuwçy ID</th>
                <th>Topary</th>
                <th>Wagty</th>
                <th>Doglan Senesi</th>
                <th>Milleti</th>
                <th>Ýaşy</th>
                <th>Ady</th>
                <th>Familiýasy</th>
                <th>Mobil Belgisi</th>
                <th>SMS Belgisi</th>
                <th>Mugallymy</th>
              </tr>
              </thead>

              <tbody>
              <% @report_contracts.each do |rc| %>
                  <tr class="gradeA">
                    <td><%= rc.id %></td>
                    <td><%= rc.student.id %></td>
                    <td><%= rc.group.groupTitle %></td>
                    <td><%= rc.group.lesson_time.lessonTimeTitle %></td>
                    <td><%= rc.student.birthDate %></td>
                    <td><%= rc.student.nationality.nationalityName %></td>
                    <td>
                      <% @age = Date.today.year-rc.student.birthDate.year %>
                      <% @age -= 1 if Date.today < rc.student.birthDate + @age.years %>
                      <%= @age %>
                    </td>
                    <td><%= rc.student.fName %></td>
                    <td><%= rc.student.lName %></td>
                    <td><%= rc.student.mobilePhone %></td>
                    <td><%= rc.student.smsMobilePhone %></td>
                    <td>
                      <% if (rc.group.teacher) %>
                        <%= rc.group.teacher.teacherFName+" "+rc.group.teacher.teacherLName %>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
              </tbody>
              <tfoot>
              <tr>
                <th>Şertnama ID</th>
                <th>Okuwçy ID</th>
                <th>Topary</th>
                <th>Wagty</th>
                <th>Doglan Senesi</th>
                <th>Milleti</th>
                <th>Ýaşy</th>
                <th>Ady</th>
                <th>Familiýasy</th>
                <th>Mobil Belgisi</th>
                <th>SMS Belgisi</th>
                <th>Mugallymy</th>
              </tr>
              </tfoot>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>

