<h1>Synplaryň Sanawy</h1>
<%= link_to "<i class='fa fa-plus'></i>&nbsp; Täze Synp".html_safe, new_room_path, :class => "btn btn-primary"  %>

<% if (notice) %>
    <div class="alert alert-success fade in">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
      <p id="notice"><%= notice %></p>
    </div>
<% end %>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
<div class="col-lg-12">
<div class="ibox float-e-margins">
<div class="ibox-title">
  <h5>Synplaryň Sanawy</h5>
  <div class="ibox-tools">
    <a class="collapse-link">
      <i class="fa fa-chevron-up"></i>
    </a>
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      <i class="fa fa-wrench"></i>
    </a>
    <ul class="dropdown-menu dropdown-user">
      <li><a href="#">Config option 1</a>
      </li>
      <li><a href="#">Config option 2</a>
      </li>
    </ul>
  </div>
</div>
<div class="ibox-content">

<div class="table-responsive">


<table class="table table-striped table-bordered table-hover dataTables-example">
  <thead>
  <tr>
    <th>Doly Ady</th>
    <th>Gysga Ady</th>
    <th>Ýer Sany</th>
    <th>Proýektor</th>
    <th>E-Tagta</th>
    <th>Bellikler</th>
    <th>Amallar</th>
  </tr>
  </thead>

  <tbody>
  <% @rooms.each do |room| %>
      <tr>
        <td><%= link_to room.roomFullTitle, room %></td>
        <td><%= link_to room.roomShortTitle, room %></td>
        <td><%= room.roomCapacity %></td>
        <td>
          <% if (room.hasProjector) %>
              <i class="fa fa-check" style="color: lawngreen"></i>
          <% else %>
              <i class="fa fa-times" style="color: red"></i>
          <% end %>
        </td>
        <td>
          <% if (room.hasEboard) %>
            <i class="fa fa-check" style="color: lawngreen"></i>
          <% else %>
            <i class="fa fa-times" style="color: red"></i>
          <% end %>
        </td>
        <td><%= room.notes %></td>
        <td><div style="float: right">
          <%= link_to "Giňişleýin", room, :class => "btn btn-success" %>
          <%= link_to "Üýtget", edit_room_path(room), :class => "btn btn-warning" %>
          <% link_to "Boz", room, method: :delete, data: { confirm: "Are you sure ?" }, :class => "btn btn-danger" %>
        </div></td>
      </tr>
  <% end %>
  </tbody>

<tfoot>
    <tr>
      <th>Doly Ady</th>
      <th>Gysga Ady</th>
      <th>Ýer Sany</th>
      <th>Proýektor</th>
      <th>E-Tagta</th>
      <th>Bellikler</th>
      <th>Amallar</th>
    </tr>
</tfoot>

</table>

</div>

</div>
</div>
</div>
</div>
</div>

